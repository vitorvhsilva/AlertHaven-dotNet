@model Events.Application.Dto.Alerta.PersistirAlertaInputDTO

<div class="row">
    <form asp-action="Create">
        <div class="form-group">
            <label asp-for="IdEvento"></label>
            <input asp-for="IdEvento" class="form-control" />
            <span asp-validation-for="IdEvento" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="NivelAlerta"></label>
            <select asp-for="NivelAlerta"
                    asp-items="ViewBag.Niveis"
                    class="form-control">
                <option value="">-- Selecione um nivel --</option>
            </select>
            <span asp-validation-for="NivelAlerta" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="MensagemAlerta"></label>
            <input asp-for="MensagemAlerta" class="form-control" />
            <span asp-validation-for="MensagemAlerta" class="text-danger"></span>
        </div>
        <div>
            <input type="submit" value="Salvar" />
        </div>
    </form>
</div>

<div>
    <a asp-action="Index">Voltar</a>
</div>


@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}