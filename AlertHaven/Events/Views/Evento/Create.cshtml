@model Events.Application.Dto.Evento.PersistirEventoInputDTO

<div class="row">
    <form asp-action="Create">
        <input type="hidden" asp-for="DataHoraEvento" value="@DateTime.Now.ToString("yyyy-MM-ddTHH:mm:ss")" /> 

        <div class="form-group">
            <label asp-for="IdIot"></label>
            <input asp-for="IdIot" class="form-control" />
            <span asp-validation-for="IdIot" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="LatitudeEvento"></label>
            <input asp-for="LatitudeEvento" class="form-control" />
            <span asp-validation-for="LatitudeEvento" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="LongitudeEvento"></label>
            <input asp-for="LongitudeEvento" class="form-control" />
            <span asp-validation-for="LongitudeEvento" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="TipoEvento"></label>
            <select asp-for="TipoEvento"
                    asp-items="ViewBag.Tipos"
                    class="form-control">
                <option value="">-- Selecione um tipo --</option>
            </select>
            <span asp-validation-for="TipoEvento" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="IntensidadeEvento"></label>
            <select asp-for="IntensidadeEvento"
                    asp-items="ViewBag.Intensidades"
                    class="form-control">
                <option value="">-- Selecione uma intensidade --</option>
            </select>
            <span asp-validation-for="IntensidadeEvento" class="text-danger"></span>
        </div>
        <div>
            <input type="submit" value="Salvar" />
        </div>
    </form>
</div>

<div>
    <a asp-action="Index">Voltar</a>
</div>


@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}