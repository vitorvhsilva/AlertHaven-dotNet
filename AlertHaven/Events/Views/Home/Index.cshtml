@{
    ViewData["Title"] = "Home Page";
}

<div class="container py-5">
    <div class="text-center">
        <h1 class="display-3 fw-bold mb-3">Bem-vindo à AlertHaven</h1>
        <p class="lead mb-5">Sistema interno de monitoramento e alertas de eventos climáticos.</p>

        <div class="row justify-content-center gap-4">
            <div class="col-md-3">
                <a class="btn btn-outline-primary btn-lg w-100 shadow-sm" asp-area="" asp-controller="Iot" asp-action="Index">
                    <i class="bi bi-cpu"></i> Gerenciar IoTs
                </a>
            </div>
            <div class="col-md-3">
                <a class="btn btn-outline-success btn-lg w-100 shadow-sm" asp-area="" asp-controller="Evento" asp-action="Index">
                    <i class="bi bi-cloud-drizzle"></i> Eventos Climáticos
                </a>
            </div>
            <div class="col-md-3">
                <a class="btn btn-outline-danger btn-lg w-100 shadow-sm" asp-area="" asp-controller="Alerta" asp-action="Index">
                    <i class="bi bi-exclamation-triangle"></i> Alertas Emitidos
                </a>
            </div>
        </div>
    </div>
</div>
