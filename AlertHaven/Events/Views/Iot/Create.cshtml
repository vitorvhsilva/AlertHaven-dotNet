@model Events.Application.Dto.Iot.PersistirIotInputDTO

<div class="row">
    <form asp-action="Create">
        <div class="form-group">
            <label asp-for="TipoIot"></label>
            <select asp-for="TipoIot"
                    asp-items="ViewBag.Tipos"
                    class="form-control">
                <option value="">-- Selecione um tipo --</option>
            </select>
            <span asp-validation-for="TipoIot" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="UnidadeMedidaIot"></label>
            <select asp-for="UnidadeMedidaIot"
                    asp-items="ViewBag.UnidadesMedidas"
                    class="form-control">
                <option value="">-- Selecione uma unidade de medida --</option>
            </select>
            <span asp-validation-for="UnidadeMedidaIot" class="text-danger"></span>
        </div>
        <div>
            <input type="submit" value="Salvar" />
        </div>
    </form>
</div>

<div>
    <a asp-action="Index">Voltar</a>
</div>


@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}